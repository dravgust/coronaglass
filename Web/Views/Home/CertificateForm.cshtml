@using Web.Infrastructure
@using System.Globalization
@inject SharedLocalizationService Resources
@{
    var isRightToLeft = CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft;
}

@section Title{<title>@Resources["Warranty certificate"]</title>}
@section Head {
    <link rel="stylesheet" asp-append-version="true" href="~/css/masonry.css" />
    <link rel="stylesheet" asp-append-version="true" href="~/css/modal.css" />
    <link rel="stylesheet" asp-append-version="true" href="~/css/toggle.button.css" />

    @if (isRightToLeft)
    {
        <link rel="stylesheet" asp-append-version="true" href="~/metronic/assets/css/pages/pricing/pricing-1.rtl.css" />
    }
    else
    {
        <link rel="stylesheet" asp-append-version="true" href="~/metronic/assets/css/pages/pricing/pricing-1.css" />
    }

    <resources names='new[] { "CertificateForm", "SharedResources" }'></resources>
}

@section Scripts
{
    <script src="https://unpkg.com/packery@2/dist/packery.pkgd.js"></script>
    <script type="text/javascript" src="~/app/js/chunk-vendors.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/app/js/form.js" asp-append-version="true"></script>
}


<div id="app"></div>