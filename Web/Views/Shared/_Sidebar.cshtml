
@*<button class="kt-aside-close " id="kt_aside_close_btn"><i class="la la-close"></i></button>*@
<div class="kt-aside kt-aside--fixed  kt-grid__item kt-grid kt-grid--desktop kt-grid--hor-desktop" id="kt_aside">
    <!-- begin:: Aside -->
    <div class="kt-aside__brand kt-grid__item " id="kt_aside_brand">
        <div class="kt-aside__brand-logo">
            <span class="v-logo">Инструменты</span>
        </div>
        <div class="kt-aside__brand-tools">
            <button class="kt-aside__brand-aside-toggler" id="kt_aside_toggler">
                <span>@await Html.PartialAsync("svg/_arrows.left.icon")</span>
                <span>@await Html.PartialAsync("svg/_arrows.right.icon")</span>
            </button>
            <!--
            <button class="kt-aside__brand-aside-toggler kt-aside__brand-aside-toggler--left" id="kt_aside_toggler"><span></span></button>
            -->
        </div>
    </div>

    <!-- end:: Aside -->
    <!-- begin:: Aside Menu -->
    <div class="kt-aside-menu-wrapper kt-grid__item kt-grid__item--fluid" id="kt_aside_menu_wrapper">
        <div id="kt_aside_menu" class="kt-aside-menu " data-ktmenu-vertical="1" data-ktmenu-scroll="1">
            <ul class="kt-menu__nav ">

                <li id="aside-menu-item-smartcut" class="kt-menu__item kt-menu__item--active" aria-haspopup="true">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="kt-menu__link ">
                        <span class="kt-menu__link-icon ">@await Html.PartialAsync("svg/_boards.icon")</span>
                        <span class="kt-menu__link-text">Оптимизация резки</span>
                    </a>
                </li>

                @*<li id="aside-menu-item-logout" class="kt-menu__item" aria-haspopup="true">
                    <a href="@Url.Content(@"~/logout?returnUrl=/")" class="kt-menu__link">
                        <span class="kt-menu__link-icon">@await Html.PartialAsync("svg/_logout.icon")</span>
                        <span class="kt-menu__link-text">Log Out</span>
                    </a>
                </li>*@
            </ul>
        </div>
    </div>

    <!-- end:: Aside Menu -->
</div>

<!-- end:: Aside -->